{port_specs, [{"priv/canola-port", ["c_src/canola-port.c"]}]}.

{port_env, [{"LDFLAGS", "$LDFLAGS -lpam"}]}.
{cover_enabled, true}.

{plugins, [pc]}.

{provider_hooks,
 [
  {pre,
   [
    {compile, {pc, compile}},
    {clean, {pc, clean}}
   ]
  }
 ]
}.

{xref_checks,[undefined_function_calls,undefined_functions,locals_not_used,
    deprecated_function_calls, deprecated_functions]}.
